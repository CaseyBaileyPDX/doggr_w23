{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "vite-node -w src/index.ts",
    "build": "vite build --emptyOutDir -c vite.config.ts -m production",
    "startProd": "http-server -p 8080 build/",
    "lint": "eslint . --ext .ts",
    "test": "vitest run --passWithNoTests",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --passWithNoTests",
    "migration:run": "pnpm typeorm-ts-node-esm migration:run -d ./postgres_datasource.ts",
    "migration:create": "pnpm typeorm-ts-node-esm migration:create",
    "migration:generate": "pnpm typeorm-ts-node-esm migration:generate -d ./postgres_datasource.ts",
    "migration:revert": "pnpm typeorm-ts-node-esm migration:revert -d ./postgres_datasource.ts",
    "seed": "vite-node src/index.ts -- -seed"
  },
  "scriptsComments": {
    "dev": "Starts the development server using vite-plugin-node for rapid iteration.",
    "build": "Builds the app for production.",
    "startProd": "Runs the built app in production mode. Note this requires globally-installed npm package http-server (pnpm i -g http-server).",
    "lint": "Lints the project.",
    "test": "Runs the test suite.",
    "test:ui": "Runs the test suite in the browser.",
    "test:once": "Runs the test suite once.",
    "migration:run": "Runs all pending migrations",
    "migration:create": "Creates new migration for manual entry, used like > pnpm migration:create ./src/db/migrations/MyNewMigrationName",
    "migrations:generate": "Auto-generates a new migration based on any entity changes you made to your JS files, used like > pnpm migration:generate ./src/db/migrations/IpHistoryAddMethod",
    "migration:revert": "Undoes the most recent migration, can be called multiple times in a row",
    "seed": "Starts Doggr in seed mode (Create default database entries), used like > pnpm seed"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/middie": "^8.1.0",
    "@fastify/static": "^6.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "fastify": "^4.11.0",
    "fastify-cors": "^6.1.0",
    "fastify-env": "^2.2.0",
    "fastify-plugin": "^4.5.0",
    "pg": "^8.9.0",
    "pino": "^8.8.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.11"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@swc/cli": "^0.1.60",
    "@swc/core": "^1.3.32",
    "@types/cors": "^2.8.13",
    "@types/node": "^18.11.18",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "@vitest/coverage-c8": "^0.28.3",
    "@vitest/ui": "^0.28.3",
    "c8": "^7.12.0",
    "esbuild": "^0.17.7",
    "eslint": "^8.31.0",
    "fastify-cli": "^5.7.0",
    "graphile-migrate": "^1.4.1",
    "pino-pretty": "^9.1.1",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "vite": "^4.0.4",
    "vite-node": "^0.28.3",
